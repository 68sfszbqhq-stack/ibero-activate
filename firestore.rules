rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null;
    }

    // --- REGLAS EXISTENTES ---

    match /areas/{areaId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /employees/{employeeId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['points', 'lastAttendance']));
    }

    match /attendances/{attendanceId} {
      allow read: if true;
      allow create: if isAdmin();
      allow delete: if isAdmin();
      allow update: if isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']));
    }

    match /feedbacks/{feedbackId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    match /wellness_tests/{testId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if isAdmin();
    }

    // --- NUEVAS REGLAS (Módulo Calendario) ---

    match /activities/{activityId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /weekly_schedules/{weekId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /activity_ratings/{ratingId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }

    // --- NUEVAS SUBCOLLECTIONS (Estructura Jerárquica) ---

    match /employees/{employeeId}/attendance/{attendanceId} {
      allow read: if true;
      allow create: if isAdmin();
      allow delete: if isAdmin();
      allow update: if isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']));
    }

    match /employees/{employeeId}/health_surveys/{surveyId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if isAdmin();
    }

    match /employees/{employeeId}/feedback/{feedbackId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // --- REGLA PARA COLLECTIONGROUP (Feedback Extemporáneo) ---
    // Esta regla permite queries de tipo collectionGroup('attendance')
    // necesarias para buscar asistencias pendientes en todas las subcollections
    match /{path=**}/attendance/{attendanceId} {
      allow read: if true;  // Permitir lectura para consultas collectionGroup
      allow write: if false; // No permitir escritura directa desde collectionGroup
    }
  }
}
